{
    "swagger": "2.0",
    "info": {
        "description": "Frete Rápido challenge to develop Rest API for external queries and return only expected values.",
        "title": "Frete Rápido back-end challenge",
        "contact": {
            "name": "Leonardo Bispo"
        },
        "version": "1.0"
    },
    "paths": {
        "/metrics": {
            "get": {
                "description": "Endpoint to search quotes data in database",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "shipping"
                ],
                "summary": "Get quotes data in database",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Informs the number of quotes that will be returned",
                        "name": "last_quotes",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handler.MetricsResposneDoc"
                        }
                    }
                }
            }
        },
        "/quotes": {
            "post": {
                "description": "Endpoint to fetch quotes data from the Frete rápido API and persists it in the database",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "shipping"
                ],
                "summary": "Fetch quote data and persist in database",
                "parameters": [
                    {
                        "description": "body request",
                        "name": "shippingData",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handler.ShippingDataDoc"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handler.QuotesResponseDoc"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handler.AddressDoc": {
            "type": "object",
            "properties": {
                "country": {
                    "type": "string",
                    "example": "BRA"
                },
                "type": {
                    "type": "integer",
                    "example": 0
                },
                "zipcode": {
                    "type": "integer",
                    "example": 1324553
                }
            }
        },
        "handler.Carrier": {
            "type": "object",
            "properties": {
                "deadline": {
                    "type": "string",
                    "example": "3"
                },
                "name": {
                    "type": "string",
                    "example": "Expresso FR"
                },
                "price": {
                    "type": "integer",
                    "example": 17
                },
                "service": {
                    "type": "string",
                    "example": "Normal"
                }
            }
        },
        "handler.CarrierMetricsDoc": {
            "type": "object",
            "properties": {
                "average_price": {
                    "type": "number",
                    "example": 18.5
                },
                "results": {
                    "type": "integer",
                    "example": 3
                },
                "total": {
                    "type": "number",
                    "example": 55.5
                }
            }
        },
        "handler.DispatchersDoc": {
            "type": "object",
            "properties": {
                "registered_number": {
                    "type": "string",
                    "example": "12345"
                },
                "volumes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/handler.Volume"
                    }
                },
                "zipcode": {
                    "type": "integer",
                    "example": 1324553
                }
            }
        },
        "handler.MetricsResposneDoc": {
            "type": "object",
            "properties": {
                "carriers": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/handler.CarrierMetricsDoc"
                    }
                },
                "higher_price": {
                    "type": "number",
                    "example": 55.5
                },
                "lowest_price": {
                    "type": "number",
                    "example": 15.5
                }
            }
        },
        "handler.QuotesResponseDoc": {
            "type": "object",
            "properties": {
                "carriers": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/handler.Carrier"
                    }
                }
            }
        },
        "handler.ShipperDoc": {
            "type": "object",
            "properties": {
                "category": {
                    "type": "string",
                    "example": "0ScdOLqC3r"
                },
                "registered_number": {
                    "type": "string",
                    "example": "12345"
                },
                "token": {
                    "type": "string",
                    "example": "19ebbe852f2f48be9713e802522783ee"
                }
            }
        },
        "handler.ShippingDataDoc": {
            "type": "object",
            "properties": {
                "dispatchers": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/handler.DispatchersDoc"
                    }
                },
                "recipient": {
                    "$ref": "#/definitions/handler.AddressDoc"
                },
                "shipper": {
                    "$ref": "#/definitions/handler.ShipperDoc"
                },
                "simulation_type": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                }
            }
        },
        "handler.Volume": {
            "type": "object",
            "properties": {
                "amount": {
                    "type": "integer",
                    "example": 1
                },
                "category": {
                    "type": "string",
                    "example": "7"
                },
                "height": {
                    "type": "number",
                    "example": 0.2
                },
                "length": {
                    "type": "number",
                    "example": 0.2
                },
                "price": {
                    "type": "integer",
                    "example": 350
                },
                "unitary_price": {
                    "type": "number",
                    "example": 5.2
                },
                "unitary_weight": {
                    "type": "number",
                    "example": 5.2
                },
                "width": {
                    "type": "number",
                    "example": 0.2
                }
            }
        }
    }
}